<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Email"
        android:textColor="#787878"
        app:layout_constraintStart_toStartOf="@+id/llEmail"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_bg"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email">


        <TextView
            android:id="@+id/actual_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_semibold"
            android:text="jennie.nichols@example.com" />

        <ImageView
            android:id="@+id/copy_email"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/copy"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/home_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat"
        android:text="Home Number"
        android:textColor="#787878"
        app:layout_constraintBottom_toTopOf="@id/llHome"
        app:layout_constraintStart_toStartOf="@+id/llHome"
        app:layout_constraintTop_toBottomOf="@id/llEmail" />




    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke_bg"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/llMobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_number"
        >


        <TextView
            android:id="@+id/actual_home_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:text="(272) 790-0888" />

        <ImageView
            android:id="@+id/copy_home_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/copy" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/montserrat"
        android:text="Mobile number"
        android:textColor="#787878"
        app:layout_constraintBottom_toTopOf="@+id/llMobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/llMobile"
        app:layout_constraintTop_toBottomOf="@id/llEmail" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke_bg"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llHome"
        app:layout_constraintTop_toBottomOf="@id/mobile_number"
        >


        <TextView
            android:id="@+id/actual_mobile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:text="(489) 330-2385" />

        <ImageView
            android:id="@+id/copy_mobile_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/copy" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>